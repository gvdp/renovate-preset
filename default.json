{
  "extends": [
    "config:base",
    ":pinVersions",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "prConcurrentLimit": 2,
  "assignees": ["gvdp"],
  "rebaseWhen": "behind-base-branch",
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "commitMessageExtra": "from {{currentVersion}} to {{newVersion}} {{#if isPatch}}(patch){{/if}}{{#if isMinor}}(minor){{/if}}",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
