{
  "extends": [
    "config:base",
    "schedule:daily"
  ],
  "prConcurrentLimit": 2,
  "assignees": ["gvdp"],
  "rebaseWhen": "behind-base-branch",
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
